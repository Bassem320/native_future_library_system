<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView style="@style/Logo" />

            <TextView
                style="@style/MainTitle"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/nav_internet_search" />

            <EditText
                android:id="@+id/SearchText1"
                style="@style/HoldingsEditText"
                android:hint="@string/search_hint" />

            <LinearLayout style="@style/KeywordLayout">

                <Spinner
                    android:id="@+id/searchin1"
                    style="@style/KeywordSpinner"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/conc1"
                    style="@style/KeywordSpinner"
                    android:layout_weight="3" />
            </LinearLayout>

            <EditText
                android:id="@+id/SearchText2"
                style="@style/HoldingsEditText"
                android:hint="@string/search_hint" />

            <LinearLayout style="@style/KeywordLayout">

                <Spinner
                    android:id="@+id/searchin2"
                    style="@style/KeywordSpinner"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/conc2"
                    style="@style/KeywordSpinner"
                    android:layout_weight="3" />
            </LinearLayout>

            <EditText
                android:id="@+id/SearchText3"
                style="@style/HoldingsEditText"
                android:hint="@string/search_hint" />

            <Spinner
                android:id="@+id/searchin3"
                style="@style/KeywordSpinner" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/search" />

            <TextView style="@style/Footer" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/resultsLayout"
        style="@style/ResultsLayout">

        <ImageView style="@style/Logo" />

        <TextView
            style="@style/MainTitle"
            android:text="@string/search_results" />

        <TextView
            android:id="@+id/ResultsNumber"
            style="@style/ResultsNumber" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/ResultsInternetSearchSwipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ResultsInternetSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</RelativeLayout>