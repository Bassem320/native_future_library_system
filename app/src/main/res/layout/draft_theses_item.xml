<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/footer_padding"
    android:layout_marginTop="@dimen/footer_padding"
    android:background="@drawable/item_border"
    android:orientation="vertical"
    android:paddingBottom="@dimen/footer_padding"
    android:paddingTop="@dimen/footer_padding">

    <TextView
        android:id="@+id/itemYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/footer_padding" />

    <TextView
        android:id="@+id/itemID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/footer_padding"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/itemTitle"
        style="@style/StartResultText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/footer_padding" />

    <TextView
        android:id="@+id/itemAuthor"
        style="@style/StartResultText"
        android:textColor="@color/colorPrimary" />
</LinearLayout>