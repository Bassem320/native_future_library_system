<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/footer_padding"
    android:layout_marginTop="@dimen/footer_padding"
    android:background="@drawable/item_border"
    android:paddingBottom="@dimen/footer_padding"
    android:paddingTop="@dimen/footer_padding">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:padding="@dimen/footer_padding"
        android:src="@drawable/placeholder_cover" />

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/itemImage"
        android:layout_toRightOf="@+id/itemImage"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/itemTitle"
            style="@style/StartResultText"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:padding="@dimen/footer_padding"
            android:singleLine="true"
            android:textColor="@color/red" />
    </LinearLayout>

    <TextView
        android:id="@+id/itemClassification"
        style="@style/StartResultText"
        android:layout_below="@+id/title_layout"
        android:layout_toEndOf="@+id/itemImage"
        android:layout_toRightOf="@+id/itemImage"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/itemPublisher"
        style="@style/StartResultText"
        android:layout_below="@+id/itemClassification"
        android:layout_toEndOf="@+id/itemImage"
        android:layout_toRightOf="@+id/itemImage"
        android:textColor="@color/colorAccent" />
</RelativeLayout>